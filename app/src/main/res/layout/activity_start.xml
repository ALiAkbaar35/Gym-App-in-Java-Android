<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hcut"
    tools:context=".start">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cut">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="400dp"
            android:layout_height="316dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="131dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logos"
            tools:ignore="MissingConstraints" />

        <TextView
            android:fontFamily="@font/poppins_medium"
            android:id="@+id/textView3"
            android:layout_width="227dp"
            android:layout_height="90dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="473dp"
            android:layout_marginBottom="170dp"
            android:text="The Best Gym And Studios"
            android:textColor="#3F51B5"
            android:textSize="30dp"
            android:textStyle=""
            app:layout_constraintBottom_toTopOf="@+id/create"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="120dp"
            android:fontFamily="@font/poppins_medium"
            android:text="    Yoga, Pilates, Boxing, Gyms, Swimming pools and more. There are no limits."
            android:textColor="@color/blue"
            android:textSize="17.5dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:ignore="MissingConstraints" />

        <Button
            app:cornerRadius="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/create"
            android:layout_width="192dp"
            android:layout_height="61dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="59dp"
            android:backgroundTint="@color/yellow"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="Create Account"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />

        <Button
            app:cornerRadius="20dp"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:id="@+id/signup"
            android:layout_width="142dp"
            android:layout_height="57dp"
            android:layout_marginEnd="32dp"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="Sign In"
            android:textColor="@color/blue"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/create"
            app:layout_constraintTop_toTopOf="@+id/create"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>