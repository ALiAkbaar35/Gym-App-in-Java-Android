<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hcut"
    tools:context=".Dietplan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cut">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="8dp"
            android:text="Top DietPlans"
            android:textColor="#3F51B5"
            android:textSize="28sp"
            app:fontFamily="@font/audiowide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="8dp"
            android:text="Easy Plans 4 Beginners."
            android:textColor="#3A3A3A"
            android:textSize="17sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlepage" />

        <View
            android:id="@+id/divpage"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:background="#25293E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitlepage" />

        <TextView
            android:id="@+id/intropage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="8dp"
            android:text="Introduction"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            app:fontFamily="@font/audiowide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divpage" />

        <TextView
            android:id="@+id/subintropage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="5dp"
            android:text="You can add here whatever related  \nto your exercises."
            android:textColor="#3A3A3A"
            android:textSize="16sp"
            app:fontFamily="sans-serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intropage" />

        <LinearLayout
            android:id="@+id/fitone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subintropage">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:src="@drawable/pic98" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fitonetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Weight Loss"
                    android:textColor="#3F51B5"
                    android:textSize="17sp"
                    app:fontFamily="@font/audiowide" />

                <TextView
                    android:id="@+id/fitonedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="  3 Months "
                    android:textColor="#3A3A3A"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fittwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fitone">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:src="@drawable/pic97" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fittwotitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Weight Gain"
                    android:textColor="#3F51B5"
                    android:textSize="17sp"
                    app:fontFamily="@font/audiowide" />

                <TextView
                    android:id="@+id/fittwodesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="  2 Months "
                    android:textColor="#3A3A3A"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fitthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fittwo">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:src="@drawable/pic99" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/back"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fitthreetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Mediterranean  Diet "
                    android:textColor="#3F51B5"
                    android:textSize="17sp"
                    app:fontFamily="@font/audiowide" />

                <TextView
                    android:id="@+id/fitthreedesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" EveryDay "
                    android:textColor="#3A3A3A"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>



        <Button
            android:id="@+id/btnexercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E64A19"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="  CONTINUE Diet  "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:cornerRadius="50dp"
            app:fontFamily="@font/audiowide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>